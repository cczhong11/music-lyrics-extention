{
    "manifest_version": 3,
    "name": "Mac 歌词显示器",
    "version": "1.2",
    "description": "显示正在播放的歌曲的歌词",
    "permissions": [
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "https://music.youtube.com/*",
        "https://www.bilibili.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}